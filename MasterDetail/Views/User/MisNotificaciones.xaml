<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterDetail.MisNotificaciones"
             BackgroundImage="orangebg.png"
             NavigationPage.BackButtonTitle="MiTurnoAPP"
             xmlns:controls="clr-namespace:MasterDetail.Controls"
             Title="Notificaciones">
    <ContentPage.Content>
       <StackLayout>
            
                <StackLayout Orientation="Horizontal">
                    <Label Text="Received message:"/>
                    <Label x:Name="lblMsg" Text="esperando..." TextColor="Gray"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal">
                    <Label Text="Send:" VerticalOptions="Center"/>
                    <Entry x:Name="txtMsg" WidthRequest="150"/>
                    <Button x:Name="btnSend" WidthRequest="100" Text="Send" BackgroundColor="Blue" TextColor="White"/>
                </StackLayout>
            <controls:AdMobView
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Start" Grid.Row="3" Grid.ColumnSpan="2" HeightRequest="90" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
