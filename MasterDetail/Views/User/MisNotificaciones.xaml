<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterDetail.MisNotificaciones"
             BackgroundImage="orangebg.png"
             NavigationPage.BackButtonTitle="MiTurnoAPP"
             xmlns:controls="clr-namespace:MasterDetail.Controls"
             Title="Notificaciones">
    <ContentPage.Content>
        <StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Mensaje Recibido: " VerticalOptions="Center" Font="Bold, 14"/>

                <Label x:Name="lblMsg" Text="esperando..." TextColor="Gray"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">

                <Label Text="Mensaje: " VerticalOptions="Center" Font="Bold, 14"/>

                <Entry x:Name="txtMsg" Opacity="0.8"  Text="" HorizontalOptions="FillAndExpand" VerticalOptions="Center" FontSize="14"/>

                <Button x:Name="btnSend" Text="Enviar" Grid.Column="1" Grid.Row="3" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" BorderRadius="20" Font="Bold, 13" BackgroundColor="orange" TextColor="White" HeightRequest="40"/>

            </StackLayout>
            <controls:AdMobView
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Start"  HeightRequest="90" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
